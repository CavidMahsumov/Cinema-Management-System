                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Foreground="White" Text="Times: " FontSize="25" Margin="30,0,0,0"/>
                        <TextBlock Foreground="White" x:Name="Timestxtblock" Text="" FontSize="27" Margin="30,0,0,0">
                          
                        </TextBlock>
                    </WrapPanel>
                    
                </StackPanel>
                <Button Style="{StaticResource InformButton}" Foreground="White" FontSize="15" Content="Book Know" Background="#2e2b30" Margin="420,160,0,0" Height="50" Width="100"></Button>
            
        </Grid>
        </Grid>

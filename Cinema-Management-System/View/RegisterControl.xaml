<UserControl x:Class="Cinema_Management_System.View.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_Management_System.View"
             mc:Ignorable="d" 
             d:DesignHeight="194" d:DesignWidth="227">
    
        <Grid Background="#2e2b30" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock FontSize="20" Margin="90,10,20,0" Foreground="White" Text="Sign Up"></TextBlock>

                <TextBox Width="200" Height="25" Margin="10,16,10,10"></TextBox>
                <TextBox Width="200" Height="25" Margin="10,10,10,10"></TextBox>
                <Button x:Name="SubmitBtn" Height="25" Content="Submit" Margin="10,5,10,0">

                </Button>
            </StackPanel>
        </Grid>
</UserControl>
